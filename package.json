{
  "name": "state-machine",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/src/main.js",
  "description": "A TypeScript state machine implementation",
  "keywords": [
    "typescript",
    "state-machine",
    "fsm"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "prisma generate && tsc",
    "build:watch": "prisma generate && tsc --watch",
    "dev": "prisma generate && ts-node src/main.ts",
    "start": "node dist/src/main.js",
    "start:dev": "prisma generate && nest start --watch",
    "start:prod": "node dist/src/main.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seeds": "ts-node prisma/seed.ts"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@prisma/client": "^6.16.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@nestjs/cli": "^11.0.10",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^30.1.3",
    "prisma": "^6.16.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  }
}